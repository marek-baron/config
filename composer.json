{
  "name": "marek-baron/config",
  "description": "Lightweight PHP configuration library.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1"
  },
  "autoload": {
    "psr-4": {
      "MarekBaron\\Config\\": "src/Config/",
      "MarekBaron\\Test\\Config\\": "test/Config/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit 256M --configuration phpstan.neon",
    "cs-check": "phpcs --standard=PSR12 src test",
    "cs-fix": "phpcbf --standard=PSR12 src test",
    "test-unit": "phpunit -c phpunit.xml",
    "coverage": "phpunit -c phpunit.xml --coverage-clover=coverage.xml",
    "check": [
      "@cs-fix",
      "@test-unit",
      "@analyse",
      "@cs-check",
      "@coverage"
    ]

  }
}
